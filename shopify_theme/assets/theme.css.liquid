.collapsible button {
  width: 100% !important;
  text-align: center !important;
  padding: 12px 0 !important;
  background: none !important;
  border: 0 !important;
  font-weight: 700 !important;
  appearance: none !important;
  -webkit-appearance: none !important;
  font-size: 14px !important;
