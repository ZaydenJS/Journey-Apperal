/* Desktop split layout for product page */
@media (min-width: 992px) {
  main.product { display: grid; grid-template-columns: minmax(380px, 55%) 1fr; gap: 24px; align-items: start; }
}

/* Utilities */
.muted {
  color: var(--muted);
}
.upper {
  text-transform: uppercase;
  letter-spacing: 1.5px;
}
/* Center all titles sitewide */
.section h2, .section h3, .product h1, header h1, header h2 {
  text-align: center !important;
  margin-left: auto;
  margin-right: auto;
}
.center {
  text-align: center !important;
}
.row {
  display: flex;
  gap: 10px;
  align-items: center;
}
.mt-0 {
  margin-top: 0;
}
.mt-8 {
  margin-top: 8px;
}
.mt-16 {
  margin-top: 16px;
}
.mt-24 {
  margin-top: 24px;
}
.fade-in {
  animation: fade 0.5s ease both;
}
@keyframes fade {
  from {
    opacity: 0;
    transform: translateY(6px);
  }
  to {
    opacity: 1;
    transform: none;
  }
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
  * {
    animation: none !important;
    transition: none !important;
  }
}


